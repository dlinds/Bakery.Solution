@{
  Layout = "_Layout";
}
@using System.Security.Claims

@using Bakery.ViewModels



<div class="container bg-light bg-gradient p-5 border rounded-3">
  <div class="mx-5 p-5 border rounded shadow-sm bg-white">
    <h3 class="mb-3">Add a treat</h3>
    <div class="row">
      <div class="col">
        <label for="Name">Name</label>
        <input type="text" class="form-control shadow-sm" name="Name" id="treatName">
      </div>
      <div class="col">
        <label for="Name">Description</label>
        <input type="text" class="form-control shadow-sm" name="Description" id="treatDescription">
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="Name" class="mt-3">Country of Origin</label>
        <input type="text" class="form-control shadow-sm" name="Name" id="treatCountry">
      </div>
      <div class="col">
        <div class="addingFlavorContainerButton">
          <label for="displayListOfFlavors" class="mt-3">Associate this with a flavor?</label>
          <br>
          <button class="btn btn-dark bakery-color-darkest shadow-sm" type="button" id="displayListOfFlavors" name="displayListOfFlavors">Yes</button>
        </div>
        <div class="addingFlavorContainerTextInput d-none">
          <br>
          <input type="text" class="form-control shadow-sm" name="Name" id="treatCountry">
        </div>
      </div>
    </div>
    <button class="btn btn-dark mt-3 bakery-color-darkest shadow-sm" type="button" id="addNewTreat" name="addNewTreat">Add treat</button>
  </div>
  <div class="mx-5 mt-5 p-5 border rounded shadow-sm bg-white">
    <h3 class="mb-3">List of treats</h3>
    @for (int x = 0; x < 5; x++)
    {
      <div class="card my-3 shadow-sm">
        <div class="card-header">
          <div class="row">
            <div class="col-8">
              <h4>Spiced Choclate Bun</h4>
            </div>
            <div class="col-4">
              <button type="button" class="btn bakery-color-middle badge rounded-pill">Add to cart</button>

              <button type="button" class="btn bakery-color-middle badge rounded-pill" data-bs-toggle="modal" data-bs-target="#editModal-@x">Edit</button>

              <div class="modal fade" id="editModal-@x" tabindex="-1" aria-labelledby="editModalLabel-@x" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="editModalLabel-@x">Modal title</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body mb-3">
                      <label for="Name">Name</label>
                      <input type="text" class="form-control shadow-sm my-2" name="Name" id="treatName-@x" value="Name here" placeholder="Enter in a new name">
                      <label for="Description">Description</label>
                      <input type="text" class="form-control shadow-sm my-2" name="Description" id="treatDescription-@x" value="Description here" placeholder="Enter in a new description">
                      <label for="CountryOfOrigin">Country of Origin</label>
                      <input type="text" class="form-control shadow-sm my-2" name="CountryOfOrigin" id="treatCountry-@x" value="Country of Origin here" placeholder="Enter in a country of origin">
                      <label for="Flavors" class="mt-3">Flavors</label>
                      <div class="row">
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Sweet</label>
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Spicy</label>
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Spicy</label>
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Spicy</label>
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Spicy</label>
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Spicy</label>
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-12">
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Spicy</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary btn-sm bakery-color-darkest">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>

              <button type="button" class="btn bakery-color-middle badge rounded-pill">Delete</button>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="card-text">
            A choclate bun that has a bit of a kick to it
          </div>
        </div>
      </div>
    }
  </div>
</div>
