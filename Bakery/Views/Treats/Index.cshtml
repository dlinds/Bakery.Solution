@{
  Layout = "_Layout";
}
@using System.Security.Claims
@using Bakery.Models

<script src="~/js/flavor/index.js"></script>

<div class="container bg-light bg-gradient p-5 border rounded-3">
  <div class="mx-5 p-5 border rounded shadow-sm bg-white">
    <h3 class="mb-3">Add a treat</h3>
    <div class="row">
      <div class="col">
        <label for="Name">Name</label>
        <input type="text" class="form-control shadow-sm" name="Name" id="treatName">
      </div>
      <div class="col">
        <label for="Name">Description</label>
        <input type="text" class="form-control shadow-sm" name="Description" id="treatDescription">
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="Name" class="mt-3">Country of Origin</label>
        <input type="text" class="form-control shadow-sm" name="Name" id="treatCountry">
      </div>
      <div class="col">
        <div class="addingFlavorContainerButton">
          <label for="displayListOfFlavors" class="mt-3">Associate this with a flavor?</label>
          <br>
          <button class="btn btn-dark bakery-color-darkest shadow-sm" type="button" id="displayListOfFlavors" name="displayListOfFlavors">Yes</button>
        </div>
        <div class="addingFlavorContainerTextInput d-none">
          <br>
          <input type="text" class="form-control shadow-sm" name="Name" id="treatCountry">
        </div>
      </div>
    </div>
    <button class="btn btn-dark mt-3 bakery-color-darkest shadow-sm" type="button" id="addNewTreat" name="addNewTreat">Add treat</button>
  </div>
  <div class="mx-5 mt-5 p-5 border rounded shadow-sm bg-white">
    <h3 class="mb-3">List of treats</h3>
    @foreach (Treat treat in Model)
    {
      <div class="card my-3 shadow-sm">
        <div class="card-header">
          <div class="row">
            <div class="col-8">
              <h4>@treat.Name</h4>
            </div>
            <div class="col-4">
              <button type="button" class="btn bakery-color-middle badge rounded-pill">Add to cart</button>

              <button type="button" class="btn bakery-color-middle badge rounded-pill" data-bs-toggle="modal" data-bs-target="#editModal-@treat.TreatId">Edit</button>

              <div class="modal fade" id="editModal-@treat.TreatId" tabindex="-1" aria-labelledby="editModalLabel-@treat.TreatId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <form>
                      <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel-@treat.TreatId">@treat.Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body mb-3">

                        <label for="Name">@treat.Name</label>
                        <input type="text" class="form-control shadow-sm my-2" name="Name" id="treatName-@treat.TreatId" value="@treat.Name" placeholder="Enter in a new name" required>
                        <label for="Description">@treat.Description</label>
                        <input type="text" class="form-control shadow-sm my-2" name="Description" id="treatDescription-@treat.TreatId" value="@treat.Description" placeholder="Enter in a new description" required>
                        <label for="CountryOfOrigin">Country of Origin</label>
                        <input type="text" class="form-control shadow-sm my-2" name="CountryOfOrigin" id="treatCountry-@treat.TreatId" value="@treat.CountryOfOrigin" placeholder="Enter in a country of origin" required>
                        <label for="Flavors" class="mt-3">Flavors</label>
                        <div class="row">
                          <div class="col-md-4 col-sm-6 col-xs-12">
                            <div class="form-check form-switch">
                              <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                              <label class="form-check-label" for="flexSwitchCheckDefault">Sweet</label>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary btn-sm bakery-color-darkest">Save changes</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <button type="button" class="btn bakery-color-middle badge rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal-@treat.TreatId">Delete</button>
              <div class="modal fade" id="deleteModal-@treat.TreatId" tabindex="-1" aria-labelledby="deleteModalLabel-@treat.TreatId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="deleteModalLabel-@treat.TreatId">Confrim Deletion</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to delete the treat Spicy Chocolate Bun?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-danger btn-sm" id="delete-@treat.TreatId">Yes, delete</button>
                      <script>
                        DeleteTreat(@treat.TreatId);
                      </script>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="card-text">
            <h6>From: @treat.CountryOfOrigin</h6>
            <br>
            @treat.Description
          </div>
        </div>
      </div>
    }
  </div>
</div>
