<!DOCTYPE html>
<html lang="en-us">

<head>
  <meta charset="utf-8">
  <title>@ViewBag.PageTitle</title>


  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
  <div class="container shadow-sm">
    <ul class="nav nav-justified shadow-sm">
      <li class="nav-item border-end menu-item bakery-color-darkest">
        <a class="nav-link link-secondary text-white py-4 px-5" href="/">Home</a>
      </li>
      <li class="nav-item border-end menu-item bakery-color-darkest">
        <a class="nav-link link-secondary text-white py-4 px-5" href="/treats">Treats</a>
      </li>
      <li class="nav-item border-end menu-item bakery-color-darkest">
        <a class="nav-link link-secondary text-white py-4 px-5" href="/flavors">Flavors</a>
      </li>
      <li class="nav-item dropdown border-end menu-item bakery-color-darkest">
        <a class="nav-link dropdown-toggle link-secondary text-white py-4 px-5" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Account</a>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/Account">@ViewBag.AuthPageTitle</a></li>
          @if (@ViewBag.AuthPageTitle == "Account Details")
          {
            <li>@using (Html.BeginForm("LogOff", "Account"))
              {
                <input type="submit" class="btn btn-default" value="Log out" />
              }
            </li>
          }
          else
          {
            <li><a class="dropdown-item" href="/Account/Register">Register</a></li>
          }
        </ul>

      </li>
    </ul>
    <div class="container-fluid px-0 pt-3 pb-5 ">
      @RenderBody()
    </div>
  </div>

</body>

</html>
